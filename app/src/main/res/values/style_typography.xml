        <item name="android:textSize">@dimen/text_small</item>
    </style>


    <style name="LightText.XLargeText">
        <item name="android:textSize">@dimen/text_xlarge</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LightText.LargeText">
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="LightText.MediumText">
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="LightText.Small">
        <item name="android:textSize">@dimen/text_small</item>
    </style>


    <style name="LightText.MediumText.Bold">
        <item name="fontPath">@string/font_bold</item>
    </style>

    <style name="LightText.XLargeText.Bold">
        <item name="fontPath">@string/font_bold</item>
    </style>

    <style name="LightText.LargeText.Bold">
        <item name="fontPath">@string/font_bold</item>
    </style>

    <style name="PrimaryDarkText.LargeText.Bold">
        <item name="fontPath">@string/font_bold</item>
    </style>

    <style name="PrimaryDarkText.MediumText.Bold">
        <item name="fontPath">@string/font_bold</item>
    </style>

    <style name="PrimaryDarkText.Small.Bold">
        <item name="fontPath">@string/font_bold</item>
    </style>

    <style name="SecondaryDarkText.Small.Bold">
        <item name="fontPath">@string/font_bold</item>
    </style>


