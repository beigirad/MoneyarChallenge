<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TypographyStyle" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">#229922</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">#229922</item>
        <item name="colorControlActivated">#229922</item>
    </style>

    <style name="PrimaryDarkText" parent="TypographyStyle">
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="SecondaryDarkText" parent="TypographyStyle">
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="LightText" parent="TypographyStyle">
        <item name="android:textColor">@color/primary_text_light</item>
    </style>


    <style name="PrimaryDarkText.XLargeText">
        <item name="android:textSize">@dimen/text_xlarge</item>
        <item name="android:textStyle">bold</item>
        <item name="fontPath">@string/font_bold</item>
    </style>

    <style name="PrimaryDarkText.LargeText">
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="PrimaryDarkText.MediumText">
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="PrimaryDarkText.Small">
        <item name="android:textSize">@dimen/text_small</item>
    </style>


    <style name="SecondaryDarkText.MediumText">
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

